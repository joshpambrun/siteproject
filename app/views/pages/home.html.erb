<%= render 'header', title: 'This is my wicked awesome website!' %>
<main>
<h2>Here are some wicked awesome categories!</h2>
<% @categories.each do |category| %>
  <section>
    <h3><%= link_to category.name, category_path(category.name) %></h3>
    <span><%= category.methods %> products</span>
    <hr>
    <p><%= category.description %></p>
  </section>
<% end %>
</main>