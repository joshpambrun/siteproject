<%= render 'header' %>
<main>
<h2>Here are some wicked awesome categories!</h2>
<article>
<% @categories.each do |category| %>
  <section>
    <h3><%= link_to category.name, category_path(category.name) %></h3>
    <span>## products</span>
    <hr>
    <p><%= category.description %></p>
  </section>
<% end %>
</article>
<h2>Here are the products current in the store!</h2>
<article>
  <% @products.each do |product| %>
  <%= render 'product', product: product %>
  <% end %>
</article>
</main>