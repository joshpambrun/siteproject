<header>
<h1>My Awesome Website</h1>
<hr>
<nav class="search_nav">
  <span><%= link_to "Home", home_path %> | <%= link_to "About", about_path %></span>|
  <%= form_tag(search_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search for a product" %>
  <%= submit_tag "Search" %>
  <% end %>|
  <%= form_tag(login_path, :method => "get", id: "login-form") do %>
  <%= text_field_tag :email, params[:email], placeholder: "Email" %>
  <%= text_field_tag :password, params[:password], placeholder: "Password" %>
  <%= submit_tag "Login" %>
  <% end %>
</nav>
<hr>
</header>
