<header>
<h1>My Awesome Website</h1>
<hr>
<nav class="search_nav">
  <span><%= link_to "Home", home_path %> | <%= link_to "About", about_path %> | <%= link_to "Contact", contact_path %></span>
  <%= form_tag(search_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search for a product" %>
  <%= submit_tag "Search" %>
  <% end %><span id="name_header">
<% if session[:current_user_id] != nil%>
  Logged in as <%= link_to @current_user.email, user_path %>
  <%= form_tag(logout_path, :method => "post", id: "logout") do %>
  <%= submit_tag "Logout" %>
  <% end %>
<% else %>
  <%= form_tag(login_path, :method => "post", id: "login-form") do %>
  <%= text_field_tag :email, params[:email], placeholder: "Email" %>
  <%= password_field_tag :password, params[:password], placeholder: "Password" %>
  <%= submit_tag "Login" %>
  <% end %>
<% end %>
<%= link_to "Checkout", checkout_path %>
</span>
</nav>
<hr>
</header>
<% unless flash[:message] == nil %>
<header id ="flash_message">
  <p><%= flash[:message] %></p>
</header>
<% end %>